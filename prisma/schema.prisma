generator client {
  provider = "prisma-client-js"
}

generator custom_generator {
  provider = "nestjs-prisma-graphql-crud-gen"
  output   = "../src/generated"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Place {
  id     Int    @id @default(autoincrement())
  name   String
  gender Gender

  stamps Stamp[]
}

model Stamp {
  id        Int       @id @default(autoincrement())
  count     String
  mealType  MealType  @default(breakfast)
  errorType ErrorType @default(notFound)

  place   Place? @relation(fields: [placeId], references: [id])
  placeId Int?
}

enum MealType {
  breakfast
  lunch
  dinner
  night
}

enum Gender {
  man
  woman
}

enum ErrorType {
  notFound
  alreadyExists
}
